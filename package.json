{
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "app/**/*.{js,scss}": [
      "./node_modules/prettier/bin-prettier.js --trailing-comma es5 --write",
      "git add"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop -a",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.1.0",
    "prettier": "^1.6.1",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@rails/webpacker": "^3.5.3"
  }
}
